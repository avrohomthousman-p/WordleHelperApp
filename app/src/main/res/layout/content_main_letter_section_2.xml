<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/letter_section_2"
    tools:showIn="@layout/content_main">

    <include
        android:id="@+id/separator2"
        layout="@layout/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/letter_entry1" />


    <TextView
        android:id="@+id/letter_number2"
        style="@style/simple_view.letter_number"
        android:text="@string/letter2"
        app:layout_constraintEnd_toStartOf="@+id/spinner2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />


    <Spinner
        android:id="@+id/spinner2"
        style="@style/simple_view.spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/letter_number2"
        app:layout_constraintTop_toBottomOf="@+id/separator2" />


    <EditText
        android:id="@+id/letter_entry2"
        style="@style/simple_view.letters_entry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner2" />


</merge>